<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_bg"
    android:layout_margin="5dp"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        android:background="#AFBDFA">

        <TextView
            android:id="@+id/yell_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:textSize="12dp"
            android:gravity="start"
            android:text="Johnny Hernandez"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/yell_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:paddingRight="4dp"
            android:layout_alignParentRight="true"
            android:text="10:01PM" />

    </RelativeLayout>

    <TextView
        android:id="@+id/yell_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingLeft="8dp"
        android:text="We dem agu boyz"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/yell_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="12dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Somewhere" />

</LinearLayout>