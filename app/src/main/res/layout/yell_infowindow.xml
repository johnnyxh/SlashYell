<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="250dp"
    android:padding="0dp"
    android:background="@drawable/yell_balloon">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        android:background="#AFBDFA" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/yell_window_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:textSize="12dp"
                android:text="Johnny Hernandez"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/yell_window_time"/>


            <TextView
                android:id="@+id/yell_window_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:paddingRight="4dp"
                android:text="10:01PM"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/yell_window_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="325dp"
        android:paddingTop="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="We dem agu boyz"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/yell_window_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="12dp"
        android:paddingRight="6dp"
        android:paddingBottom="4dp"
        android:text="Somewhere" />

</LinearLayout>